<div class="panel panel-default">
  <div class="panel-heading">
    <h1> <%= @post.title %> </h1>
    <%= @post.publish_date %> <br>
  </div>
  <div class="panel-body">
    <%= image_tag post.image.image_url.to_s  unless post.image.blank? %> 
    <%= @post.body.html_safe %> 
  </div>
  <div class="panel-footer">
    <%= link_to 'Wróć', posts_path %> 
  </div>
</div>
