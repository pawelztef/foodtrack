<div class="aktualnosci">
  <section id="posts">
    <div class="container">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-4 col-sm-6">
            <article>
              <div class="wraper">
                <%= link_to(post_path(post)) do %> 
                  <div class="zdj-post" style="background-image: url( <%= post.image.try(:image_url) ? post.image.image_url : 'img-post.png' %> ); "></div>
                <% end %>
                <%= render "post_date", post: post %>
                <%= link_to "WiÄ™cej<i class='fa fa-long-arrow-right'></i>".html_safe, post_path(post), class: 'btn-post' %> 
              </div>
              <div class="content">
                <%= render "post_content", post: post %>
              </div>
            </article>
          </div>
        <% end %> 
      </div>
    </div>
  </section>
</div>
