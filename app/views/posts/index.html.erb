<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.image_url(:thumb).to_s %> 
          <%= link_to post.title, post_path(post)  %> 
          <%= post.publish_date %>
        </td>
        <td> <%= post_excerpt(post, 70) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

