<%= simple_form_for([:backend, @produkt_page]) do |f| %>
  <div class="well">
    <%= f.simple_fields_for :pageAdds do |pageAdd| %>
      <%= pageAdd.input :body, as: :ckeditor, label: false, input_html: { ckeditor: { toolbar: 'full', language: 'pl' } } %> 
    <% end %>  
  </div>
  <div class='well'>
    <%= f.button :submit, class: 'btn btn-default' %>
    <%= link_to 'Cofnij', backend_dashboards_path, class: 'btn btn-default' %>
  </div>
<% end %>

