<div class="modal fade" id="productShowModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="containter">
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeProduct close">x</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-heading"><h4>Szczegóły Produktu</h4></div>
                    <div class="panel-body">
                      <div class="list-group">
                        <div class="row">
                          <div class="col-md-4">
                            <%= image_tag @backend_product.image_url.to_s, class: 'img-thumbnail' %>
                          </div>
                          <div class="col-md-8">
                            <div class="backend-product-details">
                              <h2 class="list-group-item-heading backend-product-name"> <%= @backend_product.name %> </h2>
                              <h4 class="backned-product-price"><%= currency_view @backend_product.price %> </h4>
                            </div>
                            <hr> 
                            <p class="list-group-item-text">
                            <h4>hasło</h4>
                            <%= @backend_product.catchphrase %>
                            </p>
                          </div>
                          <div class="col-md-12">
                              <hr>
                            <p class="list-group-item-text">
                              <h4>opis</h4>
                              <%= @backend_product.description %>
                            </p>
                          </div>
                        </div>
                        <%# <div class="row"> %>
                          <%#   <div class="col-md-6"> %>
                            <%#     <h4> <%= currency_view @backend_product.price %1> </h4> %>
                            <%#   </div> %>
                          <%# </div> %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-12">
                <button type="button" class="closeProduct btn btn-default">Zamknij</button>
                  <%= link_to 'Edytuj', edit_backend_product_path(@backend_product), class: 'btn btn-default' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

