<div class="well">
  <table class="table responsive no-wrap table-striped">
    <thead>
      <tr>
        <th>Thumbnail</th>
        <th>Nazwa</th>
        <th>Cena</th>
        <th>Publikacja</th>
        <th>Slider</th>
        <th colspan="3">Akcje</th>
      </tr>
    </thead>

    <tbody>
      <% @backend_products.each do |backend_product| %>
        <tr>
          <td> <%= image_tag backend_product.image_url(:thumb).to_s, class: 'img-thumbnail'  %> </td>
          <td> <%= backend_product.name %> </td>
          <td> <%= backend_product.price %> </td>
          <td> <%= backend_product.publish %> </td>
          <td> <%= backend_product.expose %> </td>
          <td>
            <div class="actions-btn-group btn-group " role="group" >
              <div class="btn-group" role="group">
                <%= link_to fa_icon("file-o"), backend_product_path(backend_product), remote: true, class: 'btn btn-default btn-xs' %>
              </div>
              <div class="btn-group" role="group">
                <%= link_to fa_icon("pencil-square-o"), edit_backend_product_path(backend_product), class: 'btn btn-default btn-xs' %>
              </div>
              <div class="btn-group" role="group">
                <%= link_to fa_icon("trash-o"), backend_product_path(backend_product), method: :delete, data: { confirm: 'JesteÅ› pewien?' }, class: 'btn btn-default btn-xs' %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="well">
  <%= link_to 'Nowy produkt', new_backend_product_path, class: 'btn btn-default'%>
</div>
