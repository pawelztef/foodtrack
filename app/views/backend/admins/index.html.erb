<div class="col-md-12">
  <div class="row">
    <div class="col-md-12">
      <%= simple_form_for(Admin.new, url: admin_invitation_path, html: {class: 'form-inline' }) do |f| %> 
        <%= f.input :email, required: true, error: 'Email is mandatory', placeholder: 'Email', label: false %> 
        <%= f.button :submit, 'Wyślij zaproszenie', class: 'btn btn-default' %> 
      <% end %> 
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <td><strong>Imię i Nazwisko</strong></td>
            <td><strong>Email</strong></td>
            <td><strong>Status</strong></td>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %> 
            <tr>
              <td> <%= admin.fullname  %> </td>
              <td> <%= admin.email %> </td>
              <td> <%= admin_status(admin) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
