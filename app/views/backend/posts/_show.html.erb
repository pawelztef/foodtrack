<div class="modal fade" id="postShowModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="closePost close">x</button>
        <h2>
          <%= @backend_post.title %>
        </h2>
        <div class="text-muted"> Data publikacji: <%= @backend_post.publish_date %> </div>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="containter">
              <div class="row">
                <div class="col-md-3">
                  <%= image_tag @backend_post.image_url(:thumb).to_s, class: 'img-thumbnail'  unless @backend_post.image_url.blank? %> 
                </div>
                <div class="col-md-8">
                  <%= @backend_post.body.html_safe %> 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="closePost btn btn-default">Zamknij</button>
      </div>
    </div>
  </div>
</div>

