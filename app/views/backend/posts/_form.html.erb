<div id="post-form-wrapper" class='<%= controller.controller_name %>-<%= controller.action_name %>' >
  <%= simple_form_for([:backend, @backend_post], html: {multipart: true}) do |f| %>
    <%= f.error_notification %>
    <div id="con"></div>
    <div class="form-inputs">
      <div class="well">
        <div class="row">

          <div id='post-details-con' class="col-md-9">
            <%= f.input :title, label: 'Tytuł' %> 
            <%= f.input :slug %> 
            <div class="row" id='post-details-row'>
              <div class="col-md-4">
                <%= f.label 'Data publikacji' %><br>
                <%= f.input :publish_date, label: false, as: :string %> 
              </div>
              <div class="col-md-2">
                <%= f.label 'Szkic' %><br> 
                <%= f.input :draft, as: :boolean, label: false   %> 
              </div>
              <% if params[:action] == 'new' %>
                <div class="col-md-2">
                  <%= f.label 'Facebook' %><br> 
                  <%= check_box_tag :publish_on_facebook %> 
                </div>
                  <div class="col-md-4">
                    <%= f.input :image, label: 'Zdjęcie', as: :file %> 
                  </div>
              <% end %> 
            </div>
          </div>
          <div class="col-md-3">
            <div class="thumbnail product-con">
              <% if @backend_post.image.blank? %>
                <%= image_tag 'zaslepka', id: 'post-thumb' %>
              <% else %> 
                <%= image_tag @backend_post.image_url.to_s, id: 'post-thumb' %> 
              <% end %> 
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.input :excerpt, as: :text, label: "Wyimek" %> 
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.input :body, label: "Treść główna", as: :ckeditor, input_html: { ckeditor: { toolbar: 'custom', language: 'pl' } } %> 
          </div>
        </div>
      </div>
    </div>
    <div class='well'>
      <div class="form-actions">
        <%= f.button :submit, 'Utwórz' %>
        <%= link_to 'Wróć', backend_posts_path, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>

