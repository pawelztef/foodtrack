<div class="modal fade" id="imageIndexModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="containter">
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeImagesIndexModal close">x</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-heading"><h4>Dodaj zdjÄ™cie</h4></div>
                    <div class="panel-body">
                      <div class="row">
                        <% @images.each do |img| %> 
                          <div class="col-xs-6 col-md-3">
                            <div class="thumbnail">
                              <%= image_tag img.image_url.to_s, class: 'gallery-image', id: img.id  %> 
                              <div class="caption">
                                <p> <%= img.image_title %> </p>
                              </div>
                            </div>
                          </div>
                        <% end %> 
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeImagesIndexModal btn btn-default">close</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$(function() {
  $('.gallery-image').on('click', function() {
    var id = $(this).attr("id");
    $.ajax({
      type: "POST",
      dataType: "script",
      contentType: 'application/json',
      url: "/backend/posts/add_image",
      data: JSON.stringify({
        image_id: id
      })
    })
  });
});
</script>
