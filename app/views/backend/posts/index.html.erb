<p id="notice"><%= notice %></p>

<h1>Listing Backend Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backend_posts.each do |backend_post| %>
      <tr>
        <td><%= link_to 'Show', backend_post %></td>
        <td><%= link_to 'Edit', edit_backend_post_path(backend_post) %></td>
        <td><%= link_to 'Destroy', backend_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_backend_post_path %>
