<div class="col-md-12">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nazwa trasy</th>
        <th>Imię kierowcy</th>
        <th>Licza postoi</th>
        <th>Akcje</th>
      </tr>
    </thead>
    <tbody>
      <% @tracks.each do |track| %>
        <tr>
          <td> <%= track.route_name %>  </td>
          <td> <%= track.driver %>  </td>
          <td> <%= track.stops.count %>  </td>
          <td>
            <div class="dropdown">

              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                Actions
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu"  role="menu">
                <li>
                  <%= link_to 'Pokaż', backend_track_path(track), remote: true %>
                </li>
                <li>
                  <%= link_to 'Edytuj', edit_backend_track_path(track) %>
                </li>
                <li>
                  <%= link_to 'Usuń', backend_track_path(track), method: :delete, data: { confirm: 'Jesteś pewien?' } %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @tracks.empty? %> 
    <div class="well text-center">Brak danych.</div>
  <% end %> 
  <br>

  <%= link_to 'Nowa Lista', new_backend_track_path, class: 'btn btn-default' %>
</div>
