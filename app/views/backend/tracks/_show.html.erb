<div class="modal fade" id="trasaShowModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="containter">
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeTrasa close">x</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-heading"><h4>Szczegóły Trasy</h4></div>
                    <div class="panel-body">
                      <table class='table table-hover'>
                        <tr>
                          <td><strong>Nazwa trasy</strong></td>
                          <td> <%= @track.route_name %> </td>
                        </tr>
                        <tr>
                          <td><strong>Aktywna</strong></td>
                          <td> <%= track_status(@track) %> </td>
                        </tr>
                        <tr>
                          <td><strong>Imię kierowcy</strong></td>
                          <td> <%= @track.driver %> </td>
                        </tr>
                        <tr>
                          <td><strong>Nazwa pojazdu</strong></td>
                          <td> <%= @track.truck %> </td>
                        </tr>
                        <tr>
                          <td><strong>Opis</strong></td>
                          <td> <%= @track.description %> </td>
                        </tr>
                      </table>
                      <table class='table table-striped'>
                        <tr>
                          <td><strong>Nr<strong></td>
                          <td><strong>Postoje</strong></td>
                          <td><strong>Czas postoju</strong></td>
                        </tr>
                        <% @track.stops.each_with_index do |s, index| %>
                          <tr>
                            <td> <%= index+1 %> </td>
                            <td>
                              <%= s.full_street_address %>
                            </td>
                            <td> 
                              <%= stop_working_hours_modal s %>
                            </td>
                          </tr>
                        <% end %> 
                      </table>
                    </div>
                  </div>
                </div>
                <div class="col-sm-12">
                  <button type="button" class="closeTrasa btn btn-default">Zamknij</button>
                  <%= link_to 'Edytuj', edit_backend_track_path(@track), class: 'btn btn-default' %> 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

