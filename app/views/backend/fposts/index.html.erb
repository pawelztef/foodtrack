<% content_for :top_buttons do %>
  <%= link_to material_icon.add, new_backend_fpost_path, data: { toggle: 'tooltip' }, title: 'Dodaj post', class: 'btn btn-default btn-xs'  %> 
<% end %> 
<div class="row">
  <div class="col-md-12">
    <%= render 'partials/posts_navigation' %> 
    <div class="well">
      <div class="panel-body">
        <% if @backend_fposts.blank? %>
          <div class="lead text-center">
            <%= link_to 'Dodaj post', new_backend_fpost_path, remote: true, class: 'btn btn-default'  %> 
          </div>
        <% else %>
          <%= paginate @backend_fposts %> 
          <div class="timeline-fposts-wrapper">
            <ul class="timeline">
              <%= render "timeline_post_view", backend_fposts: @backend_fposts %>
            </ul>
          </div>
        <% end %> 
      </div>
      <%= paginate @backend_fposts %> 
    </div>
  </div>
</div>

<div class="well">
  <%= link_to 'Dodaj post', new_backend_fpost_path, remote: true, class: 'btn btn-default'  %> 
</div>
