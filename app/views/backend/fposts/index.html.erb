<div class="well">
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @backend_fposts.each do |backend_fpost| %>
        <tr>
          <td><%= link_to 'Show', backend_fpost %></td>
          <td><%= link_to 'Edit', edit_backend_fpost_path(backend_fpost) %></td>
          <td><%= link_to 'Destroy', backend_fpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="well">
  <%= link_to 'Nowy post', new_backend_fpost_path, class: 'btn btn-default' %>
</div>
