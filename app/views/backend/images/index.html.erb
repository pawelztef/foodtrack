    <div class="col-xs-6 col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(img.image_url.to_s), 'http://www.google.com' %> 
        <div class="caption">
          <p> <%= img.image_title %>
          <%= link_to material_icon.delete_forever.md_18, backend_image_path(img.id), method: :delete, data: {confirm: 'JesteÅ› pewien?'}, class: 'btn btn-default btn-xs pull-right' %> 
           </p>
        </div>
      </div>
    </div>
  <% end %> 
</div>
