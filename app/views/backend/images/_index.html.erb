<div class="modal fade" id="imageIndexModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="containter">
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeImage close">x</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-heading"><h4>Dodaj zdjęcie</h4></div>
                    <div class="panel-body">
                      <div class="row">
                        <% @images.each do |img| %> 
                          <div class="col-xs-6 col-md-3">
                            <div class="thumbnail">
                              <%= link_to image_tag(img.image_url.to_s), 'http://www.google.com' %> 
                              <div class="caption">
                                <p> <%= img.image_title %> </p>
                                <%= link_to fa_icon('trash-o'), backend_image_path(img), method: :delete, data: {confirm: 'Jesteś pewien?'}, class: 'btn btn-default btn-xs' %> 
                              </div>
                            </div>
                          </div>
                        <% end %> 
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeImage btn btn-default">close</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
