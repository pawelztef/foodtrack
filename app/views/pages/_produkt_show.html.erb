<div class="modal fade" id="produktShowModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="containter">
              <div class="row">
                <div class="col-sm-12">
                  <button type="button" class="closeProdukt close">x</button>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-body">
                      <div class="list-group">
                        <div class="row">
                          <div class="col-md-12">
                            <%= image_tag @product.image_url.to_s, class: 'img-thumbnail' %>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-6">
                            <h2 class="list-group-item-heading"> <%= @product.name %> </h2>
                            <p class="list-group-item-text"> <%= @product.description %> </p>
                          </div>
                          <div class="col-md-6">
                            <h4> <%= currency_view @product.price %> </h4>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-12">
                <button type="button" class="closeProdukt btn btn-default">close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

