<% if notice %>
  <div id="front-flash" class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p class="notice"> <%= notice %> </p>
  </div>
<% elsif alert %>
  <div id="front-flash" class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p class="alert"> <%= alert %> </p>
  </div>
<% end %> 
