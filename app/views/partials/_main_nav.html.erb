<header data-spy="affix" data-offset-top="1">
  <div class="container">
    <div class="row">
      <div class="col-lg-2 col-md-2 col-sm-2">
        <%= link_to_if !page_logo.nil?, page_logo, root_path %> 
      </div>
      <div class="col-lg-10 col-md-10 col-sm-10">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                  <%= render "partials/navigation_menu" %>
                </div>
              </div>
            </nav>
          </div>
          <div class="col-lg-12 col-md-12">
            <div class="col-lg-7 col-md-6 col-sm-6 hidden-sm hidden-xs">
              <span class="header-des">Food truck polska</span><span class="subheader-des">Najlepsza pizza z tracka</span>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12 hidden-xs">
              <%= render "partials/social_media" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="clear-affix"></div>
